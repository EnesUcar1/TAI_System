            <input class="form-check-input" type="checkbox" id="useSomeUsers-edit" name="useSomeUsers">
            <label class="form-check-label" for="useSomeUsers">
              Use Some Users
            </label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="useAllUsers-edit" name="UseSideUsers" checked>
            <label class="form-check-label" for="UseSideUsers">
              Use All Users
            </label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="closeCheeseCounter-edit" name="closeCheeseCounter">
            <label class="form-check-label" for="closeCheeseCounter">
              Close The Cheese Counter
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn bg-gradient-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
