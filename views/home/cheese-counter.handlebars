  .list-group-item:nth-child(n+3) {
    margin-top: 15px
  }

  .list-group-item:nth-child(1) {
    margin-top: -15px
  }

  .list-group-item:nth-child(2) {
    margin-top: -15px
  }

  .list-group-item:nth-child(3) {
    margin-top: -15px
  }

  .list-group-item:nth-child(3n - 1) {
    margin-left: 5%;
  }

  .list-group-item:nth-child(3n) {
    margin-left: 5%;
  }
</style>

<script src="/static/assets/js/cheese-counter.js"></script>
